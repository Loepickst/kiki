    <script>
        let currentLevel = '';

        function selectLevel(level) {
            currentLevel = level;
            document.getElementById('level-view').classList.add('hidden');
            const catView = document.getElementById('category-view');
            catView.classList.remove('hidden');
            catView.classList.add('fade-in');
            document.getElementById('selected-level-display').textContent = level;
        }

        function showLevelView() {
            document.getElementById('category-view').classList.add('hidden');
            const lvlView = document.getElementById('level-view');
            lvlView.classList.remove('hidden');
            lvlView.classList.add('fade-in');
        }

        function goToWordList(type) {
            if (currentLevel === 'N1' && type === 'verb') {
                window.location.href = 'å•è¯/n1_verbs.html';
            } else {
                // TODO: Navigate to the actual word list page with query params
                alert('å·¥äº‹ä¸­: ' + currentLevel + ' - ' + type + ' å•è¯è¡¨å³å°†ä¸Šçº¿');
            }
        }

        // Check for query params on load
        window.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const level = urlParams.get('level');
            if (level) {
                selectLevel(level);
            }
        });
    </script>

